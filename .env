APP_NAME=Card Terminal Backend
ENV=production
CORS_ALLOW_ORIGINS=*

# modes
BANK_MODE=simulation
CRYPTO_MODE=simulation

# bank live endpoint (set when BANK_MODE=live)
BANK_PAYOUT_URL=https://your-bank-receiver/transfer
BANK_PAYOUT_TOKEN=replace-with-secret

# crypto live endpoints (set when CRYPTO_MODE=live)
ERC20_PAYOUT_URL=https://your-erc20-wallet/send
ERC20_PAYOUT_TOKEN=replace-with-secret
TRC20_PAYOUT_URL=https://your-trc20-wallet/send
TRC20_PAYOUT_TOKEN=replace-with-secret

# dashboard refresh seconds
DASHBOARD_REFRESH=10

# sqlite file path
SQLITE_PATH=terminal.db
